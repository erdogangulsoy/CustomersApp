<!DOCTYPE html>

<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>@ViewBag.Title</title>


    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <environment include="Development">
         <link rel="stylesheet" href="~/mdb.pro.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="~/css/mdb.min.css" />
    </environment>
    

    <!-- MDB PLUGINS -->
    @*<link rel="stylesheet" href="~/plugins/css/all.min.css" />*@
    <style>
    </style>
    @RenderSection("header", false)
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Customers App</a>
            <button class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" aria-current="page" href="/about">Test</a>
                    <a class="nav-link" href="/downloads">List</a>
                </div>
            </div>
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->

    <div>
        @RenderBody()
    </div>
    
   
    <!-- MDB ESSENTIAL -->
    <script type="text/javascript" src="~/js/mdb.min.js"></script>
    <!-- MDB PLUGINS -->
    @*<script type="text/javascript" src="~/lib/mdbootsrap/plugins/js/all.min.js"></script>*@
    @RenderSection("scripts", false)
</body>
</html>
